<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             xmlns:viewmodel="clr-namespace:ChefRisingStar.ViewModels"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="True"
             x:Class="ChefRisingStar.Views.RecipeDetailPage"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <viewmodel:RecipeDetailViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <BoxView
                    Grid.Row="0"
                    Grid.ColumnSpan="3"
                    HeightRequest="100"
                    BackgroundColor="{StaticResource Primary}"/>

                <StackLayout
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="1"
                    Margin="0,50,0,0">

                    <controls:CircleImage 
                        Source="{Binding Recipe.Image}" 
                        Aspect="AspectFill"
                        FillColor="White"
                        BorderColor="White"
                        BorderThickness="2"
                        HeightRequest="100"
                        WidthRequest="100"
                        VerticalOptions="Center"/>

                </StackLayout>

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Cook Time"
                    HorizontalOptions="Center"
                    />

                <Label 
                    Grid.Row="2" 
                    Grid.Column="0" 
                    FontSize="Micro" 
                    Text="{Binding Recipe.ReadyInMinutes}" 
                    HorizontalOptions="Center"  
                    Margin="5"/>

                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    Text="Recipe Yields:"
                    HorizontalOptions="Center"
                   />
                
                <Label 
                    Grid.Row="2" 
                    Grid.Column="2"
                    FontSize="Micro" 
                    Text="{Binding Recipe.Servings}" 
                    HorizontalOptions="Center"
                    Margin="5"/>
            </Grid>

            <Label 
                Text="{Binding Recipe.Title}" 
                HorizontalOptions="Center" 
                FontSize="Medium" 
                FontAttributes="Bold"/>

            <BoxView 
                HeightRequest="1" 
                Color="#DDDDDD"/>

            <Label
                Text="Description:"
                Font="Bold,15"/>
            <Label
                Text="{Binding Recipe.Summary}"
                Margin="10,0"/>
            <Label
                Text="Ingredients:"
                Font="Bold,15"/>
            <Label
                Text="{Binding Recipe.Instructions}" 
                Margin="10,0"/>

            <Button 
                Text="Go to Recipe!" 
                Command="{Binding LoadUrlCommand}"
                IsEnabled="{Binding IsNotBusy}"/>
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>